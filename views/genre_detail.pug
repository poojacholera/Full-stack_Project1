extends layout

block content

  h1 Genre: #{genre.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 #{genre.name} - Books
    
    dl
      each book in genre_books
        dt 
          a(href=book.url) #{book.title}
        dd(style='margin-left:20px; margin-bottom:20px') #{book.summary}

      else
        p This genre has no books
